@model List<OrdenesDeCompra.Models.OrdenDeCompra>

@{
    ViewData["Title"] = "Órdenes";
}

<h2 class="my-4">Órdenes de Compra</h2>

<a class="btn btn-success mb-3" href="@Url.Action("Crear")">
    <i class="bi bi-plus-circle"></i> Crear Orden
</a>

<div class="table-responsive">
    <table id="ordenesTable" class="table table-striped table-bordered nowrap" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th class="text-center">#</th>
                <th class="text-center">Número de Orden</th>
                <th class="text-center">Fecha</th>
                <th class="text-center">Proveedor</th>
                <th class="text-center">Monto Total</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orden in Model)
            {
                <tr>
                    <td class="text-center">@orden.Id</td>
                    <td class="text-center">@orden.NumeroDeOrden</td>
                    <td class="text-center">@orden.Fecha.ToShortDateString()</td>
                    <td class="text-center">@orden.Proveedor</td>
                    <td class="text-center">@orden.MontoTotal.ToString("C")</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm me-1" href="@Url.Action("Editar", new { id = orden.Id })">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Eliminar", new { id = orden.Id })">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/index.js"></script>
}
